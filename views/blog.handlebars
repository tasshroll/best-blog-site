
{{!-- Display the blog that the user selected --}}
<div class="text-center">
  <h2>{{title}}</h2>
  <p class="col-md-8 mx-auto">{{post}}</p>
  <h5>Created by {{user.name}} on {{format_date date_created}}</h5>
  <div class="mt-5">
    <h3>Comments</h3>
  </div>

  {{!-- If comments exist for the blog, display them --}}
  {{#if comments.length }}
  {{#each comments}}
  <div>
    <p>{{this.content}}</p>
  </div>
  {{/each}}
  {{else}}
  <p>No comments yet</p>
  {{/if}}

  {{!-- User can post their comments in the form --}}
  <div class="d-flex justify-content-center">
    <form class="form comment-form col-md-8 mx-auto">
      <div class="form-group">
        <label for="project-desc"><strong>Post Your Comment Below:</strong></label>
        <textarea class="form-input" id="comment-content" name="comment-content" cols="50"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post Comment</button>
      </div>
    </form>
  </div>


  <script src="/js/comment.js"></script>